generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model areas {
  id               Int                @id @default(autoincrement())
  city_id          Int
  name             String             @db.VarChar(100)
  postal_code      String?            @db.VarChar(20)
  created_at       DateTime           @default(now()) @db.Timestamp(0)
  updated_at       DateTime?          @default(now()) @db.Timestamp(0)
  cities           cities             @relation(fields: [city_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "areas_ibfk_1")
  companies        companies[]
  company_branches company_branches[]
  nearby_id        Int?
  nearby           areas?             @relation("NearbyAreas", fields: [nearby_id], references: [id])
  nearby_areas     areas[]            @relation("NearbyAreas")
  user             user[] // area â†’ many users

  @@index([city_id], map: "city_id")
  @@index([nearby_id])
}

model bookmarked_inquiries {
  id         Int       @id @default(autoincrement())
  user_id    Int
  inquiry_id Int
  created_at DateTime  @default(now())
  user       user      @relation(fields: [user_id], references: [id])
  inquiry    inquiries @relation(fields: [inquiry_id], references: [id], onDelete: Cascade)

  @@unique([user_id, inquiry_id])
}

model categories {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique(map: "name") @db.VarChar(100)
  parent_id          Int?
  parent             categories?          @relation("Subcategories", fields: [parent_id], references: [id])
  children           categories[]         @relation("Subcategories")
  image_url          String?              @db.Text
  created_at         DateTime             @default(now()) @db.Timestamp(0)
  updated_at         DateTime?            @default(now()) @db.Timestamp(0)
  slug               String?              @unique @db.VarChar(255)
  description        String?              @db.Text
  products           products[]
  company_categories company_categories[] 
}

model cities {
  id          Int       @id @default(autoincrement())
  district_id Int
  name        String    @db.VarChar(100)
  created_at  DateTime  @default(now()) @db.Timestamp(0)
  updated_at  DateTime? @default(now()) @db.Timestamp(0)
  areas       areas[]
  districts   districts @relation(fields: [district_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "cities_ibfk_1")

  @@index([district_id], map: "district_id")
}

model companies {
  id                     Int                  @id @default(autoincrement())
  name                   String               @db.VarChar(255)
  email                  String?              @db.VarChar(255)
  phone                  String?              @db.VarChar(20)
  website                String?              @db.VarChar(255)
  logo_url               String?              @db.Text
  area_id                Int?
  company_type_id        Int
  created_at             DateTime             @default(now()) @db.Timestamp(0)
  created_by             Int
  description            String?              @db.Text
  slug                   String               @unique @db.VarChar(255)
  average_rating         Decimal?             @db.Decimal(3, 2)
  total_inquiries        Int                  @default(0)
  documents_url          String?              @db.Text
  established_year       Int?                 @db.Year
  is_blocked             Boolean              @default(false)
  is_premium             Boolean              @default(false)
  is_verified            Boolean              @default(false)
  registration_number    String?              @db.VarChar(100)
  social_media_links     String?              @db.Text
  updated_at             DateTime?            @default(now()) @db.Timestamp(0)
  total_products         Int                  @default(0)
  verification_status_id Int?
  verified_at            DateTime             @db.DateTime(0)
  total_reviews          Int                  @default(0)
  areas                  areas?               @relation(fields: [area_id], references: [id], onUpdate: Cascade, map: "companies_ibfk_1")
  company_type           company_type?        @relation(fields: [company_type_id], references: [id], onUpdate: Cascade, map: "companies_ibfk_2")
  verification_status    verification_status? @relation(fields: [verification_status_id], references: [id], onUpdate: Cascade, map: "companies_ibfk_3")
  user                   user                 @relation(fields: [created_by], references: [id], onUpdate: Cascade, map: "companies_ibfk_4")
  company_branches       company_branches[]
  company_reviews        company_reviews[]
  company_users          company_users[]
  inquiries              inquiries[]
  products               products[]
  company_categories     company_categories[]
  company_inquiries      company_inquiries[]

  @@index([area_id], map: "area_id")
  @@index([company_type_id], map: "company_type_id")
  @@index([created_by], map: "created_by")
  @@index([verification_status_id], map: "verification_status_id")
  @@index([average_rating, total_reviews], name: "avg_rating_company_index")
  @@index([is_verified, is_premium, is_blocked]) // Filter verified/premium companies
  @@index([company_type_id, area_id]) // Location + type filter
  @@index([created_at]) // Latest companies
}

model company_branches {
  id          Int       @id @default(autoincrement())
  company_id  Int
  branch_name String?   @db.VarChar(255)
  area_id     Int?
  phone       String?   @db.VarChar(20)
  is_active   Boolean   @default(true)
  email       String?   @db.VarChar(255)
  created_at  DateTime  @default(now()) @db.Timestamp(0)
  updated_at  DateTime? @default(now()) @db.Timestamp(0)
  companies   companies @relation(fields: [company_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "company_branches_ibfk_1")
  areas       areas?    @relation(fields: [area_id], references: [id], onUpdate: Cascade, map: "company_branches_ibfk_2")

  @@index([area_id], map: "area_id")
  @@index([company_id], map: "company_id")
}

model company_categories {
  id          Int        @id @default(autoincrement())
  company_id  Int
  category_id Int
  created_at  DateTime   @default(now())
  company     companies  @relation(fields: [company_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  category    categories @relation(fields: [category_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@unique([company_id, category_id]) // Prevent duplicates
  @@index([category_id])
  @@index([company_id])
}

model company_inquiries {
  id         Int       @id @default(autoincrement())
  company_id Int
  inquiry_id Int
  created_at DateTime  @default(now())
  inquiry    inquiries @relation(fields: [inquiry_id], references: [id], onDelete: Cascade)
  company    companies @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@unique([inquiry_id, company_id])
}

model company_reviews {
  id         Int       @id @default(autoincrement())
  company_id Int
  user_id    Int
  rating     Int
  comment    String?   @db.Text
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  companies  companies @relation(fields: [company_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "company_reviews_ibfk_1")
  user       user?     @relation(fields: [user_id], references: [id], onUpdate: Cascade, map: "company_reviews_ibfk_2")

  @@unique([company_id, user_id])
  @@index([company_id], map: "company_id")
  @@index([user_id], map: "user_id")
}

model company_type {
  id         Int         @id @default(autoincrement())
  name       String      @unique(map: "name") @db.VarChar(100)
  created_at DateTime    @default(now()) @db.Timestamp(0)
  updated_at DateTime?   @default(now()) @db.Timestamp(0)
  companies  companies[]
}

model company_users {
  id         Int       @id @default(autoincrement())
  user_id    Int
  company_id Int
  position   String?   @db.VarChar(100)
  joined_at  DateTime  @default(now()) @db.Timestamp(0)
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  user       user      @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "company_users_ibfk_1")
  companies  companies @relation(fields: [company_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "company_users_ibfk_2")

  @@unique([user_id, company_id], map: "user_id")
  @@index([company_id], map: "company_id")
}

model districts {
  id          Int       @id @default(autoincrement())
  province_id Int
  name        String    @db.VarChar(100)
  created_at  DateTime  @default(now()) @db.Timestamp(0)
  updated_at  DateTime? @default(now()) @db.Timestamp(0)
  cities      cities[]
  provinces   provinces @relation(fields: [province_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "districts_ibfk_1")

  @@index([province_id], map: "province_id")
}

model inquiries {
  id                   Int                    @id @default(autoincrement())
  product_id           Int?
  company_id           Int
  user_id              Int
  message              String                 @db.Text
  name                 String?                @db.VarChar(100)
  email                String?                @db.VarChar(100)
  phone                String?                @db.VarChar(20)
  attachment_url       String?                @db.Text
  inquiry_status       String?                @db.VarChar(50)
  inquiries_type_id    Int
  created_at           DateTime               @default(now()) @db.Timestamp(0)
  updated_at           DateTime?              @default(now()) @db.Timestamp(0)
  products             products?              @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "inquiries_ibfk_1")
  companies            companies              @relation(fields: [company_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "inquiries_ibfk_2")
  user                 user?                  @relation(fields: [user_id], references: [id], onUpdate: Cascade, map: "inquiries_ibfk_3")
  inquiries_type       inquiries_type?        @relation(fields: [inquiries_type_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "inquiries_ibfk_4")
  bookmarked_inquiries bookmarked_inquiries[]
  company_inquiries    company_inquiries[]

  @@index([company_id], map: "company_id")
  @@index([inquiries_type_id], map: "inquiries_type_id")
  @@index([product_id], map: "product_id")
  @@index([user_id], map: "user_id")
}

model inquiries_type {
  id         Int         @id @default(autoincrement())
  name       String?     @db.VarChar(100)
  created_at DateTime    @default(now()) @db.Timestamp(0)
  updated_at DateTime?   @default(now()) @db.Timestamp(0)
  inquiries  inquiries[]
}

model notifications {
  id         Int       @id @default(autoincrement())
  user_id    Int
  message    String    @db.Text
  is_read    Boolean?  @default(false)
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  user       user      @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "notifications_ibfk_1")

  @@index([user_id], map: "user_id")
}

model product_images {
  id         Int       @id @default(autoincrement())
  product_id Int
  image_url  String    @db.Text
  is_primary Boolean   @default(false)
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  products   products  @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "product_images_ibfk_1")

  @@index([product_id], map: "product_id")
}

model product_reviews {
  id         Int       @id @default(autoincrement())
  product_id Int
  user_id    Int
  rating     Int
  comment    String?   @db.Text
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  products   products  @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "product_reviews_ibfk_1")
  user       user?     @relation(fields: [user_id], references: [id], onUpdate: Cascade, map: "product_reviews_ibfk_2")

  @@unique([product_id, user_id])
  @@index([product_id], map: "product_id")
  @@index([user_id], map: "user_id")
}

model product_tags {
  id         Int       @id @default(autoincrement())
  product_id Int
  tag        String    @db.VarChar(100)
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  products   products  @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "product_tags_ibfk_1")

  @@index([product_id], map: "product_id")
}

model products {
  id              Int               @id @default(autoincrement())
  company_id      Int
  name            String            @db.VarChar(255)
  description     String?           @db.Text
  price           Decimal?          @db.Decimal(10, 2)
  unit            Int?
  category_id     Int?
  slug            String            @unique @db.VarChar(255)
  is_featured     Boolean           @default(false)
  created_at      DateTime          @default(now()) @db.Timestamp(0)
  updated_at      DateTime?         @default(now()) @db.Timestamp(0)
  average_rating  Decimal?          @default(0) @db.Decimal(3, 2)
  total_reviews   Int               @default(0)
  inquiries       inquiries[]
  product_images  product_images[]
  product_reviews product_reviews[]
  product_tags    product_tags[]
  companies       companies         @relation(fields: [company_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "products_ibfk_1")
  categories      categories?       @relation(fields: [category_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "products_ibfk_2")
  saved_products  saved_products[]

  @@index([average_rating, total_reviews], name: "avg_rating_index")
  @@index([category_id], map: "category_id")
  @@index([company_id], map: "company_id")
  @@index([is_featured, category_id]) // Featured products by category
  @@index([company_id, category_id]) // Company's products by category
  @@index([created_at]) // Latest products
}

model role {
  role_id    Int       @id @default(autoincrement())
  name       String    @unique(map: "name") @db.VarChar(50)
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  user       user[]
}

model saved_products {
  id         Int       @id @default(autoincrement())
  user_id    Int
  product_id Int
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  user       user      @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "saved_products_ibfk_1")
  products   products  @relation(fields: [product_id], references: [id], onDelete: Cascade, onUpdate: Cascade, map: "saved_products_ibfk_2")

  @@unique([user_id, product_id], map: "user_id")
  @@index([product_id], map: "product_id")
}

model provinces {
  id         Int         @id @default(autoincrement())
  name       String      @db.VarChar(100)
  code       String?     @db.VarChar(10)
  created_at DateTime    @default(now()) @db.Timestamp(0)
  updated_at DateTime?   @default(now()) @db.Timestamp(0)
  districts  districts[]
}

model status {
  status_id  Int       @id @default(autoincrement())
  name       String    @unique @db.VarChar(250)
  created_at DateTime  @default(now()) @db.Timestamp(0)
  updated_at DateTime? @default(now()) @db.Timestamp(0)
  user       user[]
}

model user {
  id                               Int       @id @default(autoincrement())
  email                            String    @unique(map: "email") @db.VarChar(255)
  password                         String    @db.VarChar(255)
  username                         String    @unique @db.VarChar(255)
  phone                            String?   @db.VarChar(20)
  profile_picture                  String?   @db.Text
  role_id                          Int       @default(1)
  status_id                        Int       @default(1)
  email_verified                   Boolean   @default(false)
  email_verification_token         String?   @db.Text
  password_reset_token             String?   @db.Text
  password_reset_expires           DateTime? @db.DateTime(0)
  email_verification_token_expires DateTime? @db.DateTime(0)
  last_login                       DateTime? @db.DateTime(0)
  is_blocked                       Boolean   @default(false)
  blocked_until                    DateTime?
  created_at                       DateTime  @default(now()) @db.Timestamp(0)
  updated_at                       DateTime? @default(now()) @db.Timestamp(0)

  oauth_id        String?           @unique(map: "User_oauth_id_key") @db.VarChar(100)
  oauth_provider  String?           @db.VarChar(20)
  companies       companies[]
  company_reviews company_reviews[]
  company_users   company_users[]
  inquiries       inquiries[]
  notifications   notifications[]
  product_reviews product_reviews[]
  saved_products  saved_products[]
  role            role              @relation(fields: [role_id], references: [role_id], onDelete: Cascade, onUpdate: Cascade, map: "user_ibfk_1")
  status          status            @relation(fields: [status_id], references: [status_id], onDelete: Cascade, onUpdate: Cascade, map: "user_ibfk_2")

  bookmarked_inquiries bookmarked_inquiries[]
  areas                areas?                 @relation(fields: [areasId], references: [id])
  areasId              Int?

  @@index([email], map: "idx_email")
  @@index([role_id], map: "role_id")
  @@index([status_id], map: "status_id")
}

model verification_status {
  id          Int         @id @default(autoincrement())
  status_name String      @unique(map: "status_name") @db.VarChar(100)
  created_at  DateTime    @default(now()) @db.Timestamp(0)
  updated_at  DateTime?   @default(now()) @db.Timestamp(0)
  companies   companies[]
}
